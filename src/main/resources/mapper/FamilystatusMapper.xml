<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.herdao.hdp.manpower.mpclient.mapper.FamilystatusMapper">

      <resultMap id="familystatusMap" type="net.herdao.hdp.manpower.mpclient.entity.Familystatus">
            <id property="id" column="id"/>
                  <result property="oid" column="OID"/>
                  <result property="name" column="NAME"/>
                  <result property="relations" column="RELATIONS"/>
                  <result property="age" column="AGE"/>
                  <result property="professional" column="PROFESSIONAL"/>
                  <result property="workUnit" column="WORK_UNIT"/>
                  <result property="creatorCode" column="CREATOR_CODE"/>
                  <result property="createdTime" column="CREATED_TIME"/>
                  <result property="modifierCode" column="MODIFIER_CODE"/>
                  <result property="modifiedTime" column="MODIFIED_TIME"/>
                  <result property="staffOid" column="STAFF_OID"/>
                  <result property="staffId" column="STAFF_ID"/>
                  <result property="birthday" column="BIRTHDAY"/>
                  <result property="tenantId" column="TENANT_ID"/>
                  <result property="field1" column="FIELD1"/>
                  <result property="field2" column="FIELD2"/>
                  <result property="field3" column="FIELD3"/>
                  <result property="field4" column="FIELD4"/>
                  <result property="field5" column="FIELD5"/>
                  <result property="delFlag" column="DEL_FLAG"/>
                  <result property="address" column="address"/>
                  <result property="modifierName" column="modifier_name"/>
                  <result property="staffName" column="staff_name"/>
                  <result property="staffCode" column="staff_code"/>
      </resultMap>

      <!-- 员工家庭情况分页 -->
      <select id="findFamilyStatusPage" resultMap="familystatusMap">
            SELECT    f.id,
                      s.staff_name,
                      s.staff_code,
                      f.NAME,
                      f.RELATIONS,
                      f.age,
                      f.PROFESSIONAL,
                      f.WORK_UNIT,
                      f.address,
                      ( SELECT u.USER_NAME FROM mp_user u WHERE u.id = f.MODIFIER_CODE ) modifier_name,
                      f.MODIFIED_TIME
                  FROM
                      mp_familystatus f
                      LEFT JOIN mp_staff s ON s.ID = f.STAFF_id
                      LEFT JOIN mp_userpost u on u.USER_ID =s.USER_ID AND u.MAIN_POST = 1
                      where 1=1
                      <if test="orgId != null">
                          and u.ORG_DEPT_ID = #{orgId}
                      </if>
                      <if test="staffName != null">
                          or s.staff_name LIKE concat(#{staffName},'%')
                      </if>
                      <if test="staffCode != null">
                          or s.staff_code LIKE concat(#{staffCode},'%')
                      </if>
      </select>

</mapper>
