<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hedao.hdp.mpclient.oa.mapper.PostMapper">
    <select id="findAll" resultType="post">
        SELECT * FROM mp_post
    </select>

    <select id="chkPostDuplicateCode" parameterType="post" >
         SELECT count(*) from mp_post  where id !=#{id}  and  post_code = #{postCode}
    </select>


    <select id="chkPostDuplicateNamee" parameterType="post" >
      SELECT count(*) from mp_post  where id !=#{id}  and  post_name = #{postName}
    </select>
</mapper>
