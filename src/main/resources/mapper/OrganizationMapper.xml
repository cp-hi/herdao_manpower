    <!-- 查询组织下所有人员 -->
    <select id="selectOrgStaffAll" resultType="net.herdao.hdp.manpower.mpclient.dto.staff.StaffOrgDTO">
        SELECT
            f.ID,
            f.STAFF_NAME,
            f.STAFF_CODE,
            o.ORG_NAME,
            p.POST_NAME,
            p.JOB_LEVEL_ID1,
            f.JOB_TYPE,
            f.MOBILE,
            f.EMAIL
        FROM
            mp_user u
        LEFT JOIN mp_userpost up ON u.ID = up.USER_ID
        LEFT JOIN mp_post p ON p.ID = up.POST_ID
        LEFT JOIN mp_organization o ON o.ID = u.ORG_DEPT_ID
        LEFT JOIN mp_staff f ON f.user_id = u.ID
        WHERE
            u.ORG_DEPT_ID IN (
                SELECT
                    o.ID
                FROM
                    mp_organization o
                WHERE
                    o.ORG_CODE LIKE CONCAT(#{orgCode},'%')
            )
    </select>

    <!-- 查询组织架构图根节点 -->
    <select id="selectOrgChartRoot" resultType="net.herdao.hdp.manpower.mpclient.dto.OrgChartDTO">
        SELECT
            o.ID,
            o.ORG_CODE,
            o.ORG_NAME,
            o.org_charge_name,
            o.org_charge_work_no,
            f.MOBILE
        FROM
            mp_organization o
        LEFT JOIN mp_staff f ON o.org_charge_work_no = f.STAFF_CODE
        WHERE
            o.ID = #{id}
        LIMIT 1
    </select>

    <!-- 查询组织架构图子节点 -->
    <select id="selectOrgChartChild" resultType="net.herdao.hdp.manpower.mpclient.dto.OrgChartDTO">
        SELECT
            o.ID,
            o.ORG_CODE,
            o.ORG_NAME,
            o.org_charge_name,
            o.org_charge_work_no,
            f.MOBILE,
            	CASE (
                        SELECT
                            count(1)
                        FROM
                            mp_organization o1
                        WHERE
                            o1.PARENT_ID = o.ID
                    )
                WHEN 0 THEN
                    FALSE
                ELSE
                    TRUE
                END
            as has_child
        FROM
            mp_organization o
        LEFT JOIN mp_staff f ON o.org_charge_work_no = f.STAFF_CODE
        WHERE
            o.PARENT_ID = #{id}
    </select>
    
    <!-- 获取组织编码 -->
    <select id="getMaxOrgCode" resultType="java.lang.String">
        SELECT 
        	CONCAT( MAX(org.org_code) )
        FROM mp_organization org
        <where>
	        <if test="parentId != null">
	        	AND org.parent_id = #{parentId}
	        </if>
        </where>
    </select>
    
    <!-- 查询子组织信息  -->
    <select id="selectOrganizationByOrgCode" resultMap="organizationMap">
    	SELECT
    		 org.* 
    	FROM mp_organization org 
		WHERE org.org_code LIKE CONCAT(#{orgCode},'%')
    </select>
</mapper>
