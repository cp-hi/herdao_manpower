	<!-- 递归查询组织树 sql -->
	<sql id="organizationTreeSQL">
		SELECT
            org.id,
            org.org_name,
            org.org_code,
            CASE IFNULL(nbs, 0) WHEN 0 THEN 1 ELSE 0 END leaf_node
        FROM mp_organization org 
        LEFT JOIN (SELECT COUNT(1) nbs, orgd.parent_id FROM mp_organization orgd GROUP BY orgd.parent_id) corg ON corg.parent_id = org.id 
	</sql>
	
    <!-- 查询根组织架构 -->
    <select id="selectOrganizationTree" resultMap="organizationTreeMap">
        <include refid="organizationTreeSQL"></include>
        WHERE org.parent_id IS NULL
    </select>
     
    <!-- 递归查询二级组织树 -->
    <select id="selectSecondOrganization" resultMap="organizationTreeMap">
       <include refid="organizationTreeSQL"></include>
       <where>
           AND org.parent_id = #{id} AND org.org_tree_level &lt;= 2
        </where>
    </select>
    
